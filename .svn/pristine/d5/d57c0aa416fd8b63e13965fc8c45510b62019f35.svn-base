using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using StrengthTracker2.Core.DataTypes;

namespace StrengthTracker2.Core.Repository.Entities.WorkoutManagement
{
    public class AssessmentProfile
    {
        /// <summary>
        /// Primary key
        /// </summary>
        public int ID { get; set; }

		public Gender Gender { get; set; }

		public DateTime DOB { get; set; }

        /// <summary>
        /// Body Masss. 
        /// </summary>
        public decimal BodyMass { get; set; }

        /// <summary>
        /// Standing Height
        /// </summary>
        public decimal StandingHeight { get; set; }

        /// <summary>
        /// Seated Height
        /// </summary>
        public decimal SeatedHeight { get; set; }

        /// <summary>
        /// Leg Length
        /// </summary>
        public decimal LegLength { get; set; }

        /// <summary>
        /// Maturity Offset
        /// </summary>
        public decimal MaturityOffset { get; set; }

        /// <summary>
        /// Age at PHV
        /// </summary>
        public decimal AgeAtPHV { get; set; }

        /// <summary>
        /// Average Age at PHV
        /// </summary>
        public decimal AverageAgeAtPHV { get; set; }

        /// <summary>
        /// Age maturity level.
        /// </summary>
        public decimal AgeMaturityLevel { get; set; }

        /// <summary>
        /// Years away from PHV
        /// </summary>
        public decimal YearsAwayFromPHV { get; set; }

        /// <summary>
        /// Predicted Adult Height
        /// </summary>
        public decimal PredictedAdultHeight { get; set; }

        /// <summary>
        /// Percentage of Predicted Adult Height
        /// </summary>
        public decimal PercentageOfPredictedAdultHeight { get; set; }

        /// <summary>
        /// Holds the date at which this assessment was done.
        /// </summary>
        public DateTime AssessmentDate { get; set; }

        /// <summary>
        /// ID of the user whose AssessmentProfile data is stored
        /// </summary>
        public int UserID { get; set; }

        /// <summary>
        /// Maturity classification of the user. Early, Late or Average
        /// </summary>
        public string PredictedMaturityClassification { get; set; }

        /// <summary>
        /// Value Edited by User
        /// </summary>
        public decimal AgeAtPHVByUser { get; set; }

        /// <summary>
        /// Value edited by user
        /// </summary>
        public decimal MaturityOffsetByUser { get; set; }

        /// <summary>
        /// Value edited by user
        /// </summary>
        public decimal PredictedAdultHeightByUser { get; set; }

        /// <summary>
        /// Value edited by User
        /// </summary>
        public string PredictedMaturityClassificationByUser { get; set; }

        /// <summary>
        /// Value edited by user
        /// </summary>
        public decimal YearsAwayFromPHVByUser { get; set; }

        /// <summary>
        /// Comments entered by user
        /// </summary>
        public string Comments { get; set; }
    }
}
