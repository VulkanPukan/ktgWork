using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StrengthTracker2.Core.Repository.Entities.Actors
{
    public class Registration
    {
        /// <summary>
        /// Primary Key
        /// </summary>
        public int ID { get; set; }

        /// <summary>
        /// Holds the registered program Id.
        /// </summary>
        public int ProgramId { get; set; }

        /// <summary>
        /// ID of the registered user
        /// </summary>
        public int UserID { get; set; }

        /// <summary>
        /// Holds the registered Franchisee Id.
        /// </summary>
        public int FranchiseId { get; set; }

        /// <summary>
        /// Holds the registered Location Id.
        /// </summary>
        public int LocationId { get; set; }

        /// <summary>
        /// Holds the registered date and Time that the user interested in while registration.
        /// </summary>
        public Nullable<DateTime> DateAndTimeOfInterest { get; set; }

        /// <summary>
        /// Is the user main franchise contact
        /// </summary>
        public bool MainFranchiseContact { get; set; }

        /// <summary>
        /// Should the user receive franchise emails
        /// </summary>
        public bool FranchiseEmailContact { get; set; }
    }
}
