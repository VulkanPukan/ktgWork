        /// <summary>
        /// Associated Group
        /// </summary>
        public int ExerciseGroupID { get; set; }

        /// <summary>
        /// Exercise Order
        /// </summary>
        public int OrderNum { get; set; }

        /// <summary>
        /// Associated Movement Type
        /// </summary>
        public int MovementTypeID { get; set; }

        /// <summary>
