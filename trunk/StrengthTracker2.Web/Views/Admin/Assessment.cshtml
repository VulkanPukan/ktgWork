@{
    ViewBag.Title = "Strength Tracker | Athlete Assessment";
    Layout = "~/Views/Admin/_LayoutNew.cshtml";
}
<link rel="stylesheet" href="../content/kendo.common.min.css" />
<link rel="stylesheet" href="../content/kendo.silver.min.css">
<style>
    .navbar-top .navbar-header {
        width: 250px !important;
        text-align: center;
    }

    .row {
        margin-left: -30px;
        margin-right: -30px;
    }

    .k-grid .k-grid-header .k-header .k-link {
        height: auto;
    }

    .k-grid .k-grid-header .k-header {
        white-space: normal;
        text-align: center;
    }

    .k-grid-cancel {
        color: red;
    }
    
    .assessmentSelect{
        width: 190px !important;
    }
</style>

<div class="top-bar clearfix">
    <div class="container-fluid">
        <div class="row gutter">
            <div class="col-md-8 col-sm-6 col-xs-12">
                <h3 class="page-title">Athlete Assessment</h3>
            </div>
        </div>
    </div>
</div>
<div class="main-container">
    <div class="row gutter">
        <div class="col-lg-12">
            <div class="panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <form role="form" class="form-inline">
                                <div class="form-group">
                                    <label class="control-label">Coach</label>
                                    <br>
                                    <div class="input-group">
                                        <select id="assessmentCoachSelect" class="form-control assessmentSelect" disabled></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Sport(s)</label>
                                    <br>
                                    <div class="input-group">
                                        <select id="assessmentSportSelect" class="form-control assessmentSelect" @*multiple*@ disabled></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Team(s)</label>
                                    <br>
                                    <div class="input-group">
                                        <select id="assessmentTeamSelect" class="form-control assessmentSelect" @*multiple*@ disabled></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Report</label>
                                    <br>
                                    <div class="input-group">
                                        <select id="assessmentReportSelect" class="form-control assessmentSelect">
                                            <option value="1">Assessment 1</option>
                                            <option value="2">Assessment 2</option>
                                            <option value="3">Assessment 3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="pull-right">
                                    <button type="button" id="assessmentClearFilter" class="btn btn-sm btn-danger">Clear</button>
                                    <button type="button" id="assessmentApplyFilter" class="btn btn-success mb-lg" >Apply</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-12">
                            <div id="assessmentGrid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script src="../Scripts/kendo.all.min.js"></script>
    <script src="../Scripts/StrengthTracker2/Assessment.js"></script>
    <script type="text/javascript" charset="utf-8">
        
    </script>
}