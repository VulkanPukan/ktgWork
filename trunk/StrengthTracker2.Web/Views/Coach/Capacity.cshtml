    <script src="~/Scripts/datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript" charset="utf-8">

        var capacitydataSource = new kendo.data.DataSource({
            data: [
                { Days: "Friday", Date: '1, May 2015', From: '10:00:00', To: '18:30:00', NoofClients: '6' },
                { Days: "Saturday", Date: "4, Jul 2015", From: '08:00:00', To: '09:00:00', NoofClients: '3' },
                { Days: "Tuesday", Date: "26, Jan 2016", From: '08:00:00', To: '17:00:00', NoofClients: '6' }
            ],
            pageSize: 10

        });
        

        $("#liCapacity").addClass("active");
        $("#capacityGrid").kendoGrid({
            selectable: "multiple cell",
            allowCopy: true,
            //height: 550,
            scrollable: true,
            sortable: true,
            filterable: false,

            //pageable: {
            //    input: true,
            //    numeric: false
            //},
            columns: [
                {
                    field: "Days",
                    template: '<a href="javascript:void(0)" onclick="ShowEditCapacity();">#=Days#</a>',
                },
                {
                    field: "Date",
                    template: '#=Date#',
                },
                {
                    field: "From",
                    template: '#=From#',
                },
                {
                    field: "To",
                    template: '#=To#',
                },
                {
                    field: "# of Clients",
                    Title: 'NoofClients',
                    template: '#=NoofClients#'
                },
                //{
                //    field: "Delete",
                //    width: "90px",
                //    template: '<a href="javascript:void(0)" onclick="ShowDeleteConfirmationPopup();">Delete</a>',
                //    attributes: {
                //        style: 'white-space: nowrap '
                //    }
                //},
                {
                    field: "Actions",
                    //title: "Actions",
                    width: "200px",
                    template: '<div class="btn-group mb-sm">' +
                        '<button type="button" data-toggle="dropdown" class="btn btn-default">Select…</button>' +
                        '<button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle">' +
                        '<span class="caret"></span>' +
                        '</button>' +
                        '<ul role="menu" class="dropdown-menu" style="min-width:102px !important;">' +
                        '<li><a href="javascript:void(0);" onclick="ShowDeleteConfirmationPopup();">Delete</a></li>' +
                        '</ul>' +
                        '</div>',
                }
            ],
            dataSource: capacitydataSource
        });

        capacitydataSource.read();
        $("#capacityPager").kendoPager({
            autoBind: true,
            dataSource: capacitydataSource
        });

        function ShowDeleteConfirmationPopup() {
            $('#confirmDeletion').modal('show');
        }

        function ShowEditCapacity() {
            $("#capacitygridcontainer").hide();
            $("#AddCapacity").hide();
            $("#EditCapacity").show();
        }

        function ShowAddCapacity() {
            $("#capacitygridcontainer").hide();
            $("#EditCapacity").hide();
            $("#AddCapacity").show();
        }

        function ShowCapacityGrid() {
            $("#capacitygridcontainer").show();
            $("#EditCapacity").hide();
            $("#AddCapacity").hide();
        }

    </script>
}